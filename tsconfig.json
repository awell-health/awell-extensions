{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/tests": ["tests"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "extensions/**/*.ts",
    "src/**/*.ts",
    "examples/**/*.ts",
    "**/__tests__/**/*.mock.ts"
  ],
  "exclude": [
    "**/scripts/*.ts",
    "**/*.test.ts",
    "**/__tests__/**/*.ts",
    "**/__mocks__/**/*.ts"
  ]
}
