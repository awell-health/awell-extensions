{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*.ts",
    "extensions/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/scripts/*.ts"
  ]
}