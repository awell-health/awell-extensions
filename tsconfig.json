{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "paths": {
      "@/tests": ["tests"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "extensions/**/*.ts",
    "extensions/**/*.tsx",
    "src/**/*.ts",
    "examples/**/*.ts",
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/__tests__/**/*.mock.ts",
  ],
  "exclude": [
    "**/scripts/*.ts"
  ]
}